#:kivy 1.11.1
#:import hex kivy.utils.get_color_from_hex
<TelaInicial>:
    hora : hora
    minuto : minuto
    somahora : somahora
    minutosoma : minutosoma
    canvas:
        Color:
            rgba: hex('#126717')
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        rows:3
        size: root.width, root.height

        GridLayout:
            cols:4

            Label:
                text: "Hora Inicio: "

            TextInput:
                id: hora
                multinline:False

            Label:
                text: "Minuto Inicio: "

            TextInput:
                id: minuto
                multiline:False

            Label:
                text: "Hora Soma/Subtracao: "

            TextInput:
                id: somahora
                multiline:False

            Label:
                text: "Minuto Soma/Subtracao: "

            TextInput:
                id: minutosoma
                multiline:False

            Label:
                text: "Total: "

            Label:
                text: root.horariosaida

        GridLayout:
            cols:2

            Button:
                text:"Somar"
                background_color: hex('#009a2a')
                on_press: root.btnSomar()

            Button:
                text:"Subtrair"
                background_color: hex('#c63333')
                on_press: root.btnSubtrair()